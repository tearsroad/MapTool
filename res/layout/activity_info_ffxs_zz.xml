<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/ll_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_top" >
        <RelativeLayout 
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
        
			<ImageView
	            android:id="@+id/map"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/back_icon"
	            android:layout_centerVertical="true" 
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="16dp"/>
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="48dp"
	            android:layout_centerVertical="true"
	            android:gravity="center_vertical"
	            android:textColor="@color/white"
	            android:textSize="20sp"
	            android:layout_marginLeft="4dp"
	            android:layout_toRightOf="@id/map"
	            android:text="自助发放" />
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:paddingTop="18dp">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pic2"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical">
                <TextView 
                    style="@style/text_white_style"
                    android:textSize="16dp"
                    android:text="自助发放点"/>
                <TextView 
                    style="@style/text_white_style"
                    android:textSize="24dp"
                    android:layout_marginTop="3dp"
                    android:text="使用身份证自行领取"/>
            </LinearLayout>
        </LinearLayout>

        
    </RelativeLayout>
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/ll_logo"
	    android:layout_marginTop="22dp"
	    android:scrollbars="none">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="10dp">
	        <TextView 
	            style="@style/text_green_style"
	            android:text="它是什么"/>

	        <TextView
	            style="@style/text_gray_style"
	            android:layout_width="match_parent"
	            android:layout_marginTop="24dp"
	            android:paddingRight="0dp"
	            android:layout_marginRight="0dp"
	            android:text="在自助发放点，无须经过工作人员可以自行领取避孕药具。" />

	        <View 
		        android:layout_width="match_parent"
		        android:layout_height="0.3dp"
		        android:layout_marginTop="10dp"
		        android:background="#CCCCCC"/>
	        <TextView
	            style="@style/text_gray_style"
	            android:layout_width="match_parent"
	            android:layout_marginTop="24dp"
	            android:paddingRight="0dp"
	            android:layout_marginRight="0dp"
	            android:text="它有自助发放箱、自助发放机等不同设备。" />

	        <View 
		        android:layout_width="match_parent"
		        android:layout_height="0.3dp"
		        android:layout_marginTop="10dp"
		        android:background="#CCCCCC"/>
	        <TextView
	            style="@style/text_gray_style"
	            android:layout_width="match_parent"
	            android:layout_marginTop="24dp"
	            android:paddingRight="0dp"
	            android:layout_marginRight="0dp"
	            android:text="您使用的是是自助发放机，则需要身份证方能领取，请放心，您的身份信息不会被读取。" />

	        <View 
		        android:layout_width="match_parent"
		        android:layout_height="0.3dp"
		        android:layout_marginTop="10dp"
		        android:background="#CCCCCC"/>
	        
	        <!-- 它的种类 -->
	        <TextView 
	            style="@style/text_green_style"
	            android:layout_marginTop="44dp"
	            android:text="它的种类"/>

	        <TextView
	            style="@style/text_gray_style"
	            android:layout_width="match_parent"
	            android:layout_marginTop="24dp"
	            android:paddingRight="0dp"
	            android:layout_marginRight="0dp"
	            android:text="为了您的安全，自助发放目前以提供“安全套”为主，个别地方提供“外用避孕药”，均不发放口服避孕药。" />

	        <View 
		        android:layout_width="match_parent"
		        android:layout_height="0.3dp"
		        android:layout_marginTop="10dp"
		        android:background="#CCCCCC"/>
	        <TextView
	            style="@style/text_gray_style"
	            android:layout_width="match_parent"
	            android:layout_marginTop="24dp"
	            android:paddingRight="0dp"
	            android:layout_marginRight="0dp"
	            android:text="自动发放机领取通常为1次1盒，30天领取一次，使用中请参考设备提示。" />

	        <View 
		        android:layout_width="match_parent"
		        android:layout_height="0.3dp"
		        android:layout_marginTop="10dp"
		        android:background="#CCCCCC"/>
	    </LinearLayout>
	</ScrollView>
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/erweima"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="56dp"
	    android:layout_marginTop="148dp"/>
</RelativeLayout>