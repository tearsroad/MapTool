<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/pop_layout"
    android:orientation="vertical">
	<RelativeLayout 
	    android:layout_width="320dp"
	    android:layout_height="40dp"
	    android:background="@drawable/tophalf_openwindow">
	    <TextView 
	        style="@style/text_white_style"
	        android:textStyle="bold"
	        android:layout_centerInParent="true"
	        android:text="发现新版本"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="320dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/bottomhalf_openwindow"
	    android:padding="14dp">
	    
	    <TextView 
	        android:id="@+id/tv_versionName"
	        style="@style/text_black_style"
	        android:layout_marginTop="8dp"
	        android:text="新版本号：V1.2.0"/>
	    <TextView 
	        style="@style/text_black_style"
	        android:layout_marginTop="12dp"
	        android:text="更新内容："/>
	    <TextView 
	        android:id="@+id/tv_history"
	        android:layout_marginTop="12dp"
	        android:lineSpacingExtra="12dp"
	        style="@style/text_black_style"
	        android:textColor="@color/black2"
	        android:text="1.的的房价款乐风房价款乐风；\n2.阿是放大师傅的；"/>
	    <LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_marginTop="20dp"
	    	android:layout_marginBottom="0dp"
	    	>
	        <Button 
	            android:id="@+id/btn_left"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button4"
	            android:textSize="14dp"
	            android:text="以后再说"
	            android:textColor="@color/radio_noselect"/>
	        <Button 
	            android:id="@+id/btn_right"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:background="@drawable/button4"
	            android:textSize="14dp"
	            android:text="应用市场更新"
	            android:textColor="@color/radio_selected"
	            android:layout_marginLeft="10dp"/>
	    </LinearLayout>
	</LinearLayout>
	
</LinearLayout>
