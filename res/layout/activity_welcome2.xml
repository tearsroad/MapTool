<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
	<RelativeLayout
        android:id="@+id/ll_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_nav" >
		<!-- <ImageView
		    android:layout_width="match_parent"
		    android:layout_height="20dp"
		    android:background="#8F666666"/> -->
        <!-- <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="127dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/tt_logo" />
             -->
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_vertical">
		    
		    <ImageButton
	            android:id="@+id/button_articles"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:padding="13dp"
	            android:textColor="#fff"
	            android:background="@null"
	            android:visibility="gone"
	            android:src="@drawable/more_icon" />
	
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/button_articles"
	            android:textColor="@color/white"
	            android:textSize="18dp"
	            android:paddingLeft="8dp"
	            android:layout_margin="12dp"
	            android:text="正在寻找发放点" />
		</LinearLayout>
        

    </RelativeLayout>
    
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_centerInParent="true"
	    android:paddingBottom="50dp"
	    android:gravity="center">
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/logo_300_300"/>
	    <Button 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button5"
	        android:textColor="@color/white"
	        android:textSize="14dp"
	        android:layout_marginTop="16dp"
	        android:text="国家免费避孕药具发放点"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/background_bottom3"
	    android:layout_alignParentBottom="true"
	    android:orientation="vertical"
	    android:gravity="center">
	  <!--   现在没网络，是否去打开？ -->
	    <TextView 
	        android:id="@+id/tv_buttom_msg"
	        style="@style/text_white_style"
	        android:layout_marginTop="16dp"
	        android:text="正在定位我的位置"/>
	    <Button 
	        android:id="@+id/btn_opensetting"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button6"
	        android:textSize="14dp"
	        android:layout_marginTop="14dp"
	        android:textColor="@color/radio_selected"
	        android:visibility="gone"
	        android:text="是"/>
	    <ProgressBar 
	        android:id="@+id/progressBar1"  
		    android:layout_width="200dp"  
		    android:layout_height="wrap_content"  
		    android:background="@drawable/progressbar_background"  
		    android:progress="50"  
		    android:padding="3dp"
		    android:layout_marginTop="14dp"
		    style="@style/mProgress_horizontal"  
		    android:visibility="visible"/>
	    
	</LinearLayout>
</RelativeLayout>
